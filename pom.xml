			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.1</version>
				<configuration>
				    <fork>true</fork>
				    <path>/</path>
					<!-- contextFile>${basedir}/src/test/resources/tomcat-conf/context.xml</contextFile-->
					<useTestClasspath>true</useTestClasspath>
					<systemProperties>
						<spring.profiles.active>dev</spring.profiles.active>
						<JAVA_OPTS>-Xms256m -Xmx2048m -XX:MaxPermSize=2048m</JAVA_OPTS>
					</systemProperties>
				</configuration>
				<executions>
					<!-- At pre-integration-test phase, run the war in an embedded Tomcat 
						server. -->
					<execution>
						<id>start-tomcat</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>run-war-only</goal>
						</goals>
						<configuration>
							<port>8081</port>
							<fork>true</fork>
						</configuration>
					</execution>
					<!-- At post-integration-test phase, stop the embedded Tomcat server. -->
					<execution>
						<id>stop-tomcat</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>shutdown</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
